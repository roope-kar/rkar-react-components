{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "lib/esm",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "ES2020",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "strict": true,
    "sourceMap": true,
    "types": ["jest", "node"],
    "paths": {
      "src": ["src/*"],
      "components": ["src/components/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  }
}



