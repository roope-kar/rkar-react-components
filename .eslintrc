{
    "root": true,
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:jsx-a11y/recommended",
        "prettier",
        "prettier/@typescript-eslint"
    ],
    "plugins": [
        "react",
        "jest",
        "prettier",
        "@typescript-eslint",
        "jsx-a11y"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "parser": "typescript-eslint-parser",
      "ecmaVersion": "2018",
      "sourceType": "module",
      "project": "tsconfig.json",
        "ecmaFeatures": {
            "jsx": true,
            "experimantalObjectRestSpread": true
        }
    }
}
