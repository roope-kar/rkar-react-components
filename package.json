{
  "name": "@roope-kar/rkar-react-components",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "version": "1.0.0",
  "description": "Collection of composable react components",
  "resolutions": {
    "styled-components": "^5"
  },
  "main": "lib/index.js",
  "module": "lib/esm/",
  "sideEffects": false,
  "files": [
    "lib/"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:output": "jest --json --outputFile=.test-results.json || true",
    "test:watch": "jest --watch",
    "dev": "start-storybook -c .storybook -s ./src",
    "build:prod": "NODE_ENV=production webpack --mode production",
    "build:esm": "ttsc -p tsconfig.esm.json",
    "build": "rm -rf lib/* && npm run build:prod && npm run build:esm",
    "build-storybook": "npm run test:output && build-storybook -s public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roope-kar/rkar-react-components.git"
  },
  "keywords": [
    "react",
    "components",
    "collection"
  ],
  "author": "roope-kar@aiven.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/roope-kar/rkar-react-components/issues"
  },
  "homepage": "https://github.com/roope-kar/rkar-react-components#readme",
  "dependencies": {
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.4",
    "polished": "^4.0.2",
    "react": "^16.13.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@storybook/addon-jest": "^6.0.28",
    "@storybook/react": "^6.0.24",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.14.2",
    "@types/react": "^16.9.50",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-jest": "^26.5.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.3",
    "jest": "^26.5.0",
    "prettier": "^2.1.2",
    "prettier-loader": "^3.3.0",
    "resolve-url-loader": "^3.1.1",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.4",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.3",
    "typescript-transform-paths": "^2.0.2",
    "webpack": "4.44.2",
    "webpack-cli": "^4.2.0"
  }
}
